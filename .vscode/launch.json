{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Listen for Xdebug",
        "type": "php",
        "request": "launch",
        "port": 9003,  // Ensure this matches the port in php.ini
        "pathMappings": {
          "/var/www": "${workspaceFolder}"
        },
        "ignore": ["**/vendor/**/*.php"]
      }
    ]
}
