{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Listen for Xdebug",
        "type": "php",
        "request": "launch",
        "port": 9003,  // Ensure this matches the port in php.ini
        "pathMappings": {
          "/var/www/html": "${workspaceFolder}"
        },
        "ignore": ["**/vendor/**/*.php"]
      },
      {
        "name": "Debug PHPUnit",
        "type": "php",
        "request": "launch",
        "program": "${workspaceFolder}/vendor/bin/phpunit",
        "args": ["--configuration", "${workspaceFolder}/phpunit.xml"],
        "cwd": "${workspaceFolder}",
        "pathMappings": {
            "/var/www/html": "${workspaceFolder}"
          },
        "port": 9003
      }
    ]
}
